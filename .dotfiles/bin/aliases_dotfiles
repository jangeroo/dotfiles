# Create alias for managing dotfiles
# For more info see https://stegosaurusdormant.com/bare-git-repo/

alias dotgit='git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
alias ,dot='dotgit'

alias ,dots='dotgit status'
alias ,dotl='dotgit log'
alias ,dottracked='dotgit ls-tree -r main --name-only'

alias ,dota='dotgit add'
alias ,dotau='dotgit add -u'

alias ,dotcm='dotgit commit -m'

alias ,dotpush='dotgit push origin main'
